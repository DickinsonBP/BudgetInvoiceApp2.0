{
    "QMainWindow": [
        {
            "title":"Servicios Bedoya"
        }
    ],
    "QSettings": [
        {
            "ThemeSettings": [
                {
                    "CustomTheme": [
                        {
                            "Background-color": "#1b1b27",
                            "Text-color": "#fff",
                            "Accent-color": "#ece424",
                            "Theme-name": "Default-Dark",
                            "Icons-color": "#fff",
                            "Default-Theme": true
                        }
                    ]
                }
            ],
            "AppSettings":{
                "OrginizationName":"Servicios Bedoya",
                "ApplicationName":"Servicios Bedoya",
                "OrginizationDormain":""
            }
        }
    ],
    "QPushButtonGroup": [
        {
            "Buttons": [
                "btn_home",
                "btn_budgets",
                "btn_invoices",
                "btn_about",
                "btn_help",
                "btn_settings"
            ],
            "Style": [
                {
                    "Active":"background-color: #1b1b27; border-left: 3px solid #ece424; font-weight: bold;",
                    "NotActive": "background-color: transparent; border: none;"
                }
            ]
        }
    ],
    "QCustomSlideMenu": [
        {
            "name": "leftMenu",
            "defaultSize": [
                {
                    "width": 0,
                    "height": "parent"
                }
            ],
            "collapsedSize": [
                {
                    "width": 0,
                    "height": "parent"
                }
            ],
            "expandedSize": [
                {
                    "width": 200,
                    "height": "parent"
                }
            ],
            "toggleButton": [
            {
                "buttonName": "btn_menu",
                "icon": [
                    {
                        "whenMenuIsCollapsed": ":res/Icons/align-justify.png",
                        "whenMenuIsExpanded": ":res/Icons/chevron-left.png"
                    }
                ]
            }
        ],
            "menuTransitionAnimation": [
                {
                    "animationDuration": 300,
                    "animationEasingCurve": "Linear"
                }
            ]
        }
    ],
    "QStackedWidget":[
		{
			"name":"mainPages",
			"transitionAnimation":[
				{
					"fade":[
						{
							"active": true,
							"duration":500,
							"easingCurve": "Linear"
						}
					],
					"slide":[
						{
							"active":true,
							"duration": 500,
							"direction": "horizontal",
							"easingCurve": "Linear"
						}
					]
				}
			],
			"navigation":[
				{
					"navigationButtons":[
						{
							"btn_home": "homePage",
							"btn_budgets": "budgetPage",
							"btn_settings": "settingsPage",
							"btn_invoices": "invoicePage"						
                        }
					]
				}
			]
	
		}

	]
}